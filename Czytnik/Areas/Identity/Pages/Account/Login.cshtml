@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<section class="form form--login">
    <div class="form__side">
        <h2 class="form__side-heading">Nie posiadasz jeszcze konta?</h2>
        <p class="form__side-paragraph">Chcesz w pełni korzystać z naszego serwisu? Zarejestruj się już teraz.</p>
        <a class="form__side-button button button--transparent button--medium" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
    </div>
    <div class="form__content">
        <h2 class="form__heading">Zaloguj się na <span class="form__heading--highlight">Czytnik</span></h2>
        @* <button class="form__google">
            Zaloguj się za pomocą Google
        </button> *@
        <form id="account" method="post" class="form__form">
            <div asp-validation-summary="All" class="form__warning"></div>
            @* <p class="form__text">lub użyj swojego maila</p> *@
            <label class="form__label">
                <span asp-validation-for="Input.UserName" class="form__warning"></span>
                <input asp-for="Input.UserName" type="text" placeholder="Nazwa użytkownika" class="form__input form-control" required />
            </label>
            <label class="form__label">
                <span asp-validation-for="Input.Password" class="form__warning"></span>
                <input asp-for="Input.Password" type="password" placeholder="Hasło" class="form__input form-control" id="passwordInput" required />
            </label>
            @* <a asp-page="./ForgotPassword" class="form__forgot">Nie pamiętasz hasła?</a> *@
            <input type="submit" class="form__submit button button--secondary button--medium" value="Zaloguj się" />
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}